# 应用配置
VITE_APP_TITLE=生产看板系统
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=喷漆二工段任务分配可视化系统

# 数据库配置
VITE_DB_NAME=production_kanban.db
VITE_DB_VERSION=1.0.0
VITE_ENABLE_SQLITE=true
VITE_ENABLE_LOCALSTORAGE_FALLBACK=true

# 服务器配置
VITE_SERVER_PORT=3000
VITE_SERVER_HOST=localhost
VITE_API_BASE_URL=/api

# 开发配置
VITE_DEV_MODE=false
VITE_ENABLE_DEVTOOLS=false
VITE_ENABLE_CONSOLE_LOGS=false

# 功能开关

VITE_ENABLE_AUTO_BACKUP=true
VITE_ENABLE_SMART_ASSIGNMENT=true
VITE_ENABLE_PERFORMANCE_MONITOR=false

# 文件上传配置
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=xlsx,xls,csv

# 安全配置
VITE_ENABLE_CORS=true
VITE_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# 日志配置
VITE_LOG_LEVEL=info
VITE_MAX_LOG_SIZE=1048576
VITE_LOG_RETENTION_DAYS=30

# 性能配置
VITE_PAGE_SIZE=50
VITE_DEBOUNCE_DELAY=300
VITE_CACHE_DURATION=3600000

# 备份配置
VITE_BACKUP_INTERVAL=86400000
VITE_MAX_BACKUP_FILES=10
VITE_BACKUP_COMPRESSION=true